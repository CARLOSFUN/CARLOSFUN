// Flag 02 Remote Session Source IP
// Tables: DeviceLogonEvents
// Time range: Dec 1-31, 2025
// Paste into MDE Advanced Hunting
DeviceLogonEvents
| where Timestamp between (datetime(2025-12-01) .. datetime(2025-12-31))
| where LogonType == "RemoteInteractive"
| where DeviceName =~ "<DEVICE>"
| project Timestamp, DeviceName, AccountName, RemoteIP, LogonType
| order by Timestamp asc
